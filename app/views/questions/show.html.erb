<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @question.body %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @question.user.email %>
</p>

<h4> Answers </h4>
<ul>
  <% @question.answers.each do |answer| %>
    <li> <%= answer.body %> by <%= answer.user.email %></li>
  <% end %>
</ul>
<%= link_to 'Back', questions_path %>
